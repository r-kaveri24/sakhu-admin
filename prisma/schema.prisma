generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma2"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  password     String
  // Profile fields
  firstName    String?
  lastName     String?
  mobile       String?
  bio          String?
  position     String?
  location     String?
  country      String?
  cityState    String?
  pinCode      String?
  profilePhoto String?
  createdItems News[]   @relation("createdByNews")
}

model News {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  summary     String?
  content     String
  heroImage   String?
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  publishedDay   Int?
  publishedMonth Int?
  publishedYear  Int?
  createdBy   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  creator     User?     @relation("createdByNews", fields: [createdBy], references: [id])
}

model Testimonial {
  id        String   @id @default(uuid())
  name      String
  role      String?
  quote     String
  rating    Int      @default(5)
  avatar    String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaImage {
  id        String   @id @default(uuid())
  key       String
  url       String
  width     Int?
  height    Int?
  alt       String?
  caption   String?
  createdBy String?
  createdAt DateTime @default(now())
  galleryId String?
}

model MediaVideo {
  id          String      @id @default(uuid())
  key         String
  url         String
  posterKey   String?
  durationSec Int?
  resolution  String?
  createdBy   String?
  createdAt   DateTime    @default(now())
  status      MediaStatus @default(UPLOADED)
}

model Notification {
  id         String    @id @default(uuid())
  title      String
  body       String
  targetType String?
  isSent     Boolean   @default(false)
  sentAt     DateTime?
  createdAt  DateTime  @default(now())
}

enum Role {
  ADMIN
  EDITOR
  USER
}

enum MediaStatus {
  UPLOADED
  PROCESSING
  READY
  FAILED
}

model TeamMember {
  id          String   @id @default(uuid())
  name        String
  designation String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VolunteerMember {
  id        String   @id @default(uuid())
  name      String
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Form submissions captured from the public website
model DonationSubmission {
  id           String   @id @default(uuid())
  name         String
  email        String?
  mobile       String?
  state        String?
  address      String?
  adharCardNo  String?
  panCardNo    String?
  adharFileUrl String?
  panFileUrl   String?
  amount       Int?
  createdAt    DateTime @default(now())
}

model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String?
  mobile    String?
  address   String?
  note      String?
  createdAt DateTime @default(now())
}

model VolunteerSubmission {
  id             String   @id @default(uuid())
  name           String
  email          String?
  mobile         String?
  address        String?
  occupation     String?
  areasOfWork    Json?
  availability   Json?
  fromTime       String?
  toTime         String?
  hoursPerDay    Int?
  preferredCity  String?
  createdAt      DateTime @default(now())
}

// Simple analytics model to record site visits
model SiteVisit {
  id         String   @id @default(uuid())
  page       String?
  userAgent  String?
  ip         String?
  createdAt  DateTime @default(now())
}

