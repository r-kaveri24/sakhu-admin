{
  "info": {
    "name": "Sakhu Admin API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "sakhu-admin-collection"
  },
  "item": [
    {
      "name": "Auth: Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@sakhu.org\",\n  \"password\": \"admin123\"\n}"
        }
      }
    },
    {
      "name": "Auth: Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/auth/me", "host": ["{{baseUrl}}"], "path": ["api","auth","me"] }
      }
    },
    {
      "name": "Uploads: Sign (Hero Desktop)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/uploads/sign", "host": ["{{baseUrl}}"], "path": ["api","uploads","sign"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fileName\": \"hero-desktop.jpg\",\n  \"fileType\": \"image/jpeg\",\n  \"fileSize\": 123456,\n  \"feature\": \"hero\",\n  \"breakpoint\": \"desktop\"\n}"
        }
      }
    },
    {
      "name": "Hero: List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/hero", "host": ["{{baseUrl}}"], "path": ["api","hero"] }
      }
    },
    {
      "name": "Hero: Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/hero", "host": ["{{baseUrl}}"], "path": ["api","hero"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"hero/desktop/2025-11-05/uuid.jpg\",\n  \"url\": \"{{uploadedPublicUrl}}\",\n  \"breakpoint\": \"desktop\",\n  \"caption\": \"Home hero\"\n}"
        }
      }
    },
    {
      "name": "Hero: Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/hero?id={{heroId}}&imageKey={{heroImageKey}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","hero"],
          "query": [
            { "key": "id", "value": "{{heroId}}" },
            { "key": "imageKey", "value": "{{heroImageKey}}" }
          ]
        }
      }
    },
    {
      "name": "Uploads: Sign (Testimonial)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/uploads/sign", "host": ["{{baseUrl}}"], "path": ["api","uploads","sign"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fileName\": \"headshot.jpg\",\n  \"fileType\": \"image/jpeg\",\n  \"fileSize\": 123456,\n  \"feature\": \"testimonials\",\n  \"resourceId\": \"t1\"\n}"
        }
      }
    },
    {
      "name": "Testimonials: List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/testimonials", "host": ["{{baseUrl}}"], "path": ["api","testimonials"] }
      }
    },
    {
      "name": "Testimonials: Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/testimonials", "host": ["{{baseUrl}}"], "path": ["api","testimonials"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Doe\",\n  \"role\": \"Alumni\",\n  \"quote\": \"Great experience!\",\n  \"avatarUrl\": \"{{uploadedPublicUrl}}\"\n}"
        }
      }
    },
    {
      "name": "Testimonials: Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/testimonials?id={{testimonialId}}&imageKey={{testimonialImageKey}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","testimonials"],
          "query": [
            { "key": "id", "value": "{{testimonialId}}" },
            { "key": "imageKey", "value": "{{testimonialImageKey}}" }
          ]
        }
      }
    },
    {
      "name": "News: List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/news", "host": ["{{baseUrl}}"], "path": ["api","news"] }
      }
    },
    {
      "name": "News: Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/news", "host": ["{{baseUrl}}"], "path": ["api","news"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample News\",\n  \"slug\": \"sample-news\",\n  \"summary\": \"A short summary\",\n  \"content\": \"Full content here...\",\n  \"heroImageUrl\": \"{{uploadedPublicUrl}}\",\n  \"isPublished\": true\n}"
        }
      }
    },
    {
      "name": "News: Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/news", "host": ["{{baseUrl}}"], "path": ["api","news"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{newsId}}\",\n  \"title\": \"Updated Title\",\n  \"summary\": \"Updated summary\",\n  \"content\": \"Updated content\",\n  \"heroImageUrl\": \"{{uploadedPublicUrl}}\"\n}"
        }
      }
    },
    {
      "name": "News: Delete",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/news?id={{newsId}}&heroImageKey={{newsImageKey}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","news"],
          "query": [
            { "key": "id", "value": "{{newsId}}" },
            { "key": "heroImageKey", "value": "{{newsImageKey}}" }
          ]
        }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "uploadedPublicUrl", "value": "" },
    { "key": "testimonialId", "value": "" },
    { "key": "testimonialImageKey", "value": "" },
    { "key": "newsId", "value": "" },
    { "key": "newsImageKey", "value": "" },
    { "key": "heroId", "value": "" },
    { "key": "heroImageKey", "value": "" }
  ]
}